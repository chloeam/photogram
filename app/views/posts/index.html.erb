<% @posts.each do |post| %>
  <div class="post">
    <div class="post-heading">
      <p class="name"><%= link_to(post.user.user_name, "#") %></p>
    </div>
    <div class="post-image">
      <%= link_to (image_tag post.image.url(:medium), class: "image-responsive"), post_path(post) %>
    </div>
    <div class="post-info">
      <p><%= post.caption %></p>
    </div>
  </div>
<% end %>
