<% @posts.each do |post| %>
  <div class="post">
    <div class="post-heading">
      <p class="name"><%= link_to("Chloe Atchue-Mamlet", "#") %></p>
    </div>
    <div class="post-image">
      <%= link_to (image_tag post.image.url(:medium)), post_path(post) %>
    </div>
    <div class="post-info">
      <p><%= post.caption %></p>
    </div>
  </div>
<% end %>
